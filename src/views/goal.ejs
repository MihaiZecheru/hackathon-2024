<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("header-meta") %>
    <!-- Your existing styles -->
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        header {
           
           
            padding: 1em;
            text-align: center;
        }

        section {
            max-width: 800px;
            margin: 2em auto;
            padding: 1em;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
            width: 80%;
            margin-left: auto;
            margin-right: auto;
        }

        button {
            flex: 1;
            margin: 0;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            color: #fff;
            border: none;
            border-radius: 20px;
        }

        

        footer {
            
            color: #fff;
            padding: 1em;
            text-align: center;
        }

        /* Add some additional styling for the modal if needed */
        .modal-content {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Add styling for number input in the modal */
        .modal-content input[type="number"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        /* Style the close button in the modal header */
        
    </style>

    <!-- Add Bootstrap CSS link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <%- include("header-navbar") %>

    <%- include("signin-modal") %>

    <section>
        <h2>Set Your Goals For 2024</h2>

        <div class="buttons">
            <!-- Button 1 with Bootstrap modal trigger -->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#sleep-modal" id="sleep-btn" >
                Sleep
            </button>
            <!-- Button 2 with Bootstrap modal trigger -->
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#water-modal" id="water-btn" >
                Water
            </button>
            <!-- Button 3 with Bootstrap modal trigger -->
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#steps-modal" id="steps-btn" >
                Steps
            </button>
            <!-- Button 4 with Bootstrap modal trigger -->
            <button type="button" class="btn btn-warning" style="color: white" data-bs-toggle="modal" data-bs-target="#calories-modal"  id="calories-btn">
                Calories
            </button>
        </div>
        
    </section>

    <!-- Bootstrap Modals -->
    <div class="modal top fade" id="sleep-modal" tabindex="-1" aria-labelledby="exampleModalLabel1" aria-hidden="true"
        data-bs-backdrop="static" data-bs-keyboard="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel1">Sleep Goal</h5>
                    
                </div>
                <div class="modal-body">
                    <div class="form-outline" data-mdb-input-init>
                        <input type="number" id="sleepInput" class="form-control" />
                        <label class="form-label" for="sleepInput">Hours of Sleep</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="sleep-btn">Update Goal</button>
                </div>
            </div>
        </div>
    </div>

   <!-- Modal 2 for Water -->
<div class="modal top fade" id="water-modal" tabindex="-1" aria-labelledby="exampleModalLabel2" aria-hidden="true"
data-bs-backdrop="static" data-bs-keyboard="true">
<div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel2">Water Goal</h5>
            
        </div>
        <div class="modal-body">
            <div class="form-outline" data-mdb-input-init>
                <input type="number" id="waterInput" class="form-control" />
                <label class="form-label" for="waterInput">Mililiters of Water</label>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" id="water-btn">Update Goal</button>
        </div>
    </div>
</div>
</div>

<!-- Modal 3 for Steps -->
<div class="modal top fade" id="steps-modal" tabindex="-1" aria-labelledby="exampleModalLabel3" aria-hidden="true"
data-bs-backdrop="static" data-bs-keyboard="true">
<div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel3">Steps Goal</h5>
            
        </div>
        <div class="modal-body">
            <div class="form-outline" data-mdb-input-init>
                <input type="number" id="stepsInput" class="form-control" />
                <label class="form-label" for="stepsInput">Number of Steps</label>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" id="steps-btn">Update Goal</button>
        </div>
    </div>
</div>
</div>

<!-- Modal 4 for Calories -->
<div class="modal top fade" id="calories-modal" tabindex="-1" aria-labelledby="exampleModalLabel4" aria-hidden="true"
data-bs-backdrop="static" data-bs-keyboard="true">
<div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel4">Calories Goal</h5>
            
        </div>
        <div class="modal-body">
            <div class="form-outline" data-mdb-input-init>
                <input type="number" id="caloriesInput" class="form-control" />
                <label class="form-label" for="caloriesInput">Calories Goal</label>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" id="calories-btn">Update Goal</button>
        </div>
    </div>
</div>
</div>
<table class="table align-middle mb-0 bg-white">
  <tbody>
    <tr>
      <td>
        <div class="d-flex align-items-center">
          <img
            src="https://media.istockphoto.com/id/902228542/vector/glass-of-water-flat-design.jpg?s=612x612&w=0&k=20&c=ixHDUWheecNlC3B1TPUpoY-MQYmkCbndYqieVtaP0F0="
            alt=""
            style="width: 45px; height: 45px"
